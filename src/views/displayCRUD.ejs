<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    .btn-edit {
        outline: none;
        border: none;
        background: rgb(226, 205, 19);
        height: 25px;
        width: 60px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-delete {
        outline: none;
        border: none;
        background: rgb(255, 0, 0);
        height: 25px;
        width: 60px;
        border-radius: 5px;
        cursor: pointer;
    }
</style>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>firstName</th>
            <th>lastName</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>

        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>">
                        <button class="btn-edit" type="button"> Edit</button>
                    </a>
                    <a href=""><button class="btn-delete" type="button">Delete</button></a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>